@model IEnumerable<Paragraph.Services.DataServices.Models.Request.ListRequestModel>

  <h2>Your Requests</h2>

@if(Model.Count() == 0)
{
  @:<p>You don't have any requests yet.</p>
}
else
{
  <table class="table">
      <thead>
          <tr>
              <th>
                  Role
              </th>
              <th>
                  Status
              </th>
              <th></th>
          </tr>
      </thead>
      <tbody>
          @foreach (var item in Model)
          {
              <tr>
                  <td>
                      @item.Role
                  </td>
                  <td>
                      @item.Status
                  </td>
                  @if (this.User.IsInRole("Admin"))
                  {
                      <td>
                          <a class="btn btn-default" asp-controller="Request" asp-action="GrantRequest" asp-route-id="@item.Id">Grant Request</a>
                      </td>
                  }


              </tr>
          }
      </tbody>
  </table>
}

